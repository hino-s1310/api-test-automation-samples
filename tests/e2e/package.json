{
  "name": "api-test-automation-playwright",
  "version": "1.0.0",
  "description": "Playwright tests for PDF to Markdown API",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:api": "playwright test --project=api-tests",
    "test:ui": "playwright test --project=ui-tests",
    "test:integration": "playwright test --project=integration-tests",
    "test:api-only": "playwright test --project=api-tests --reporter=list",
    "test:ui-only": "playwright test --project=ui-tests --reporter=list",
    "test:report": "playwright show-report",
    "install:browsers": "playwright install",
    "codegen": "playwright codegen",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "api-testing",
    "e2e-testing",
    "typescript",
    "pdf",
    "markdown"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
